{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "version": {
      "type": "string"
    },
    "enabled": {
      "type": "boolean"
    },
    "mcp_compliant": {
      "type": "boolean"
    },
    "mcp_exposed_methods": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "parameter_ranges": {
      "type": "object",
      "properties": {
        "min_values": {
          "type": "object"
        },
        "max_values": {
          "type": "object"
        },
        "default_values": {
          "type": "object"
        }
      }
    },
    "approval_thresholds": {
      "type": "object",
      "properties": {
        "change_threshold": {
          "type": "number"
        },
        "critical_parameters": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "mcp_schema": {
      "type": "object",
      "properties": {
        "description": {
          "type": "string"
        },
        "input_schema": {
          "type": "object"
        }
      }
    },
    "orchestration_metadata": {
      "type": "object",
      "properties": {
        "domain_knowledge": {
          "type": "string"
        },
        "safety_constraints": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "learning_preferences": {
          "type": "object"
        }
      }
    },
    "settings": {
      "type": "object",
      "properties": {
        "timeout": {
          "type": "number"
        },
        "retries": {
          "type": "integer"
        }
      },
      "required": [
        "timeout"
      ]
    }
  },
  "required": [
    "name",
    "version",
    "enabled",
    "mcp_compliant"
  ]
}